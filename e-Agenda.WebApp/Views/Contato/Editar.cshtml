@model EditarContatoViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Edição de Contato";
}

<hr style="width: 100%" />

<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body md-5">
                <form asp-action="Editar" asp-route-itemid="@Model.Id">
                    <h3>Formulário de Edição</h3>

                    @if (ViewData.ModelState["CadastroUnico"]?.Errors.Count > 0) {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            @ViewData.ModelState["CadastroUnico"]!.Errors.First().ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Nome" class="control-label fs-5">Nome:</label>
                        <input asp-for="Nome" class="form-control" value="@Model.Nome" />

                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Email" class="control-label fs-5">Email:</label>
                        <input asp-for="Email" class="form-control" value="@Model.Email" />

                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Telefone" class="control-label fs-5">Telefone:</label>
                        <input asp-for="Telefone" class="form-control" value="@Model.Telefone" />

                    </div>
                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a href="/contatos">Voltar para Visualização</a>
                        <button type="submit" class="btn btn-primary rounded-3 px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
