@model DetalhesContatoViewModel

@{
    Layout = "_Layout";
}

<hr style="width: 100%" />

<div class="row justify-content-center my-5">
    <div class="col-md-8 card-contato">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>@Model.Nome</h3>
                <div class="form-group d-grid gap-2 mt-3">
                    <label asp-for="Id" class="control-label fs-6">Id:</label>
                    <input asp-for="Id" class="form-control" value="@Model.Id" readonly disabled/>

                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label asp-for="Email" class="control-label fs-5">Email:</label>
                    <input asp-for="Email" class="form-control" value="@Model.Email" readonly disabled/>

                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <label asp-for="Telefone" class="control-label fs-5">Telefone:</label>
                    <input asp-for="Telefone" class="form-control" value="@Model.TelefoneFormatado" readonly disabled/>

                </div>

                @if (!string.IsNullOrWhiteSpace(Model.Empresa)) {
                    <div class="form-group d-grid gap-2 mt-3">
                        <label for="Empresa" class="control-label fs-5">Empresa:</label>
                        <input name="Empresa" class="form-control" value="@Model.Empresa" readonly disabled />
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label for="Cargo" class="control-label fs-5">Cargo:</label>
                        <input name="Cargo" class="form-control" value="@Model.Cargo" readonly disabled />
                    </div>
                }

                <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                    <a href="/contatos">Voltar para Visualização</a>
                </div>
            </div>
        </div>
    </div>
</div>
