@model ExcluirTarefaViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Exclusão de Tarefa";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body p-md-5">
                <h3>Formulário de Exclusão</h3>


                <p class="mt-4">Você deseja realmente excluir a Tarefa "@Model.Titulo"?</p>

                <form asp-action="Excluir" asp-route-id="@Model.Id">
                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a href="/tarefas">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-primary px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>